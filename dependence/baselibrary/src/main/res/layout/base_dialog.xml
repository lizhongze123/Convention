<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/shape_dialog_layout"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_marginTop="17dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_indent_hig"
        android:scaleType="fitXY"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/content"
        android:layout_below="@id/icon"
        android:textSize="14sp"
        android:maxLines="2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@id/content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="32dp">
        <TextView
            android:id="@+id/left"
            android:layout_width="0dp"
            android:lines="1"
            android:maxLength="10"
            android:background="@drawable/shape_dialog_left"
            android:gravity="center"
            android:text="@string/base_dialog_left"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/right"
            android:layout_width="0dp"
            android:gravity="center"
            android:lines="1"
            android:maxLength="10"
            android:text="@string/base_dialog_right"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_dialog_right"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/single"
            android:visibility="gone"
            android:lines="1"
            android:maxLength="10"
            android:layout_width="0dp"
            android:gravity="center"
            android:text="@string/base_dialog_left"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_dialog_single"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>