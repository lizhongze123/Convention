<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_left_role_select_dialog"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:background="@drawable/register_role_select_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/register_ic_merchant" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right_role_select_dialog"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/register_role_select_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/register_ic_user" />

    </LinearLayout>

</LinearLayout>
