<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_fff8f8f8" />

    <LinearLayout
        android:id="@+id/hourglass_item_ll"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hourglass_item_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:paddingTop="17dp"
            android:paddingRight="17dp"
            android:paddingBottom="17dp">

            <TextView
                android:id="@+id/hourglass_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="商户名"
                android:textColor="@color/color_222222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hourglass_item_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="地址"
                android:textColor="@color/color_ff222222"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
