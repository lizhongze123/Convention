<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:padding="12dp"
            android:src="@drawable/ic_access_bar"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:textColor="@color/colorTruckContent"
            android:text="@string/name_material"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/menu"
            android:layout_width="50dp"
            android:textColor="@color/colorTruckContent"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:background="#FFF"
        android:layout_below="@id/top_bar"
        android:layout_height="56dp">
        <LinearLayout
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/find_goods"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="16dp"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:src="@drawable/ic_search"
                android:scaleType="fitXY"
                android:layout_height="16dp" />
            <EditText
                android:id="@+id/find_edit"
                android:layout_width="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:background="@null"
                android:textSize="13sp"
                android:textColorHint="#CCCCCC"
                android:textColor="#000"
                android:hint="@string/hint_find"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/top"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/left_tab"
            android:layout_width="90dp"
            android:background="@color/colorBackground"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_main"
            android:layout_width="match_parent"
            android:background="#FFF"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/bottom_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:visibility="gone"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="120dp"
                android:layout_width="match_parent"
                android:background="#FFF"
                android:layout_height="50dp">
                <View
                    android:id="@+id/tab"
                    android:layout_marginLeft="12dp"
                    android:layout_width="4dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_tab_ins"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/tab"
                    android:textColor="#000"
                    android:layout_centerVertical="true"
                    android:text="@string/select_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/clear"
                    android:layout_width="26dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_trash_can"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="16dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBackground"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_bottom"
                android:layout_width="match_parent"
                android:background="#FFF"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="#FFF"/>
        </LinearLayout>
        <LinearLayout
            android:elevation="1dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#FFF"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/goods_value"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="#000"
                android:layout_gravity="center_vertical"
                android:text="@string/sum_all"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/pay"
                android:text="@string/to_pay"
                android:layout_marginLeft="16dp"
                android:textColor="#FFF"
                android:background="@drawable/shape_btn"
                android:layout_width="wrap_content"
                android:minWidth="90dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/good_list"
            android:layout_width="match_parent"
            android:background="@drawable/shape_good_list"
            android:textColor="#F5F5F5"
            android:textSize="14sp"
            android:text="@string/list_goods"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/good_count"
            android:layout_width="wrap_content"
            android:minWidth="16dp"
            android:minHeight="16dp"
            android:layout_alignParentRight="true"
            android:textColor="#FFF"
            android:textSize="7sp"
            android:text="0"
            android:gravity="center"
            android:inputType="number"
            android:background="@drawable/shape_good_count"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>