<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_f8f8f8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_address_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="name"
            android:textColor="@color/color_222222"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address_list_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/tv_address_list_item_name"
            android:text="phone"
            android:textColor="@color/color_222222"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address_list_item_default"
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/tv_address_list_item_phone"
            android:background="@drawable/shape_default_bg"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/address_list_default"
            android:textColor="@color/color_ffffff"
            android:textSize="9sp" />


        <TextView
            android:id="@+id/tv_address_list_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="51dp"
            android:text="address"
            android:textColor="@color/color_7a7a7a"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_address_list_item_edit"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@mipmap/ic_edit" />
    </RelativeLayout>


</LinearLayout>
